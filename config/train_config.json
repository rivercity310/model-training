{
  "model_config": {
    "base_model": "nlpai-lab/KURE-v1",
    "fine_tuned_model_name": "podosw-embed-v1-ncs-finetuned",
    "use_lora": true,
    "output_dir": "output"
  },
  "training_params": {
    "epochs": 4,
    "learning_rate": 2e-5,
    "train_batch_size": 16,
    "warmup_steps": 500,
    "total_steps": 2000,
    "evaluation_steps": 1000
  },
  "lora_params": {
    "r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05,
    "bias": "none",
    "task_type": "FEATURE_EXTRACTION"
  },
  "data_config": {
    "dataset_glob": "kure_train_dataset_*.json",
    "dataset_dir": "data/json/ncs"
  }
}